<?xml version="1.0" encoding="UTF-8"?>
<inkscape-extension translationdomain="inkstitch" xmlns="http://www.inkscape.org/namespace/inkscape/extension">
    <name>Rhinestone</name>
    <id>org.inkstitch.rhinestone</id>
    <param name="extension" type="string" gui-hidden="true">rhinestone</param>
    <effect>
        <object-type>all</object-type>
        <effects-menu>
            <submenu name="Ink/Stitch" translatable="no">
                <submenu name="Non-embroidery features" />
            </submenu>
        </effects-menu>
    </effect>
    <param name="method" type="optiongroup" appearance="combo" gui-text="Method" indents="1">
        <option value="flexible">Fill with flexible distance</option>
        <option value="line_offset">Simple lines with offset</option>
        <option value="outline">Outline</option>
    </param>
    <param name="size" type="float" gui-text="Rhinestone Size" min="0.1" max="50" precision="2" indents="1">4</param>
    <param name="x_distance" type="float" gui-text="Distance (x)" min="0.1" max="500" precision="2" indents="1">0.5</param>
    <param name="y_distance" type="float" gui-text="Distance (y)" min="0.1" max="500" precision="2" indents="1">0.5</param>
    <param name="offset" type="float" min="0" max="100" precision="2" indents="1"
           gui-text="Offset every second line (%)" gui-description="Applies to simple line method only">0</param>
    <param name="color" type="color" gui-text="Color" appearance="colorbutton" indents="1">0x808080FF</param>
    <param name="stroke_width" type="float" gui-text="Stroke Width" min="0.01" max="10"  precision="2" indents="1">0.264</param>
    <param name="spacing_method" type="optiongroup" appearance="combo" gui-text="Spacing Method" indents="1">
        <option value="distribute">Enlarge spacing to fit line length</option>
        <option value="even">Strict spacing</option>
    </param>
    <script>
        {{ command_tag | safe }}
    </script>
</inkscape-extension>
